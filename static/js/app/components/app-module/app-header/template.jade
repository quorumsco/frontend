      a.toggle-nav(href="#" v-on="click: navOnClickIn($event)" v-if="!prev")
        i.fa.fa-fw.fa-bars
      a.toggle-nav(href="{{prevUrl}}" v-on="click: navOnClickOut($event)" v-if="prev")
