    section.right
      a(href="#" v-on="click: $event.preventDefault()")
        i.fa.fa-fw.fa-search
      a(href="#" v-on="click: dropdownOnClick($event)")
        i.fa.fa-fw.fa-ellipsis-v
      ul.dropdown(v-class="visible: dropdown")
        li
          a(href="#" v-on="click: $event.preventDefault()") Sort by
        li
          a(href="#" v-on="click: $event.preventDefault()") Settings
