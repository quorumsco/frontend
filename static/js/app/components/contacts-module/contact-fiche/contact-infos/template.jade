contact-infos
  contact-category.user
    contact-separator.icon
      i.fa.fa-user
    contact-separator.title
      each val in ['Nom', 'Prénom', 'né(e) le']
        span #{val}
    contact-separator.value
      each val in ['{{surname}}', '{{firstname}}', '{{birthdate}} 05/11/1996']
        span.info #{val}
  contact-category.home
    contact-separator.icon
      i.fa.fa-home
    contact-separator.title
      each val in ['Adresse', 'Departement']
        span #{val}
    contact-separator.value
      each val in ['{{adress}} 5 rue Barrenes 33000, Bordeaux', '{{department}} Gironde']
        span.info #{val}
  contact-category.phone
    contact-separator.icon
      i.fa.fa-phone
    contact-separator.title
      span Téléphone
    contact-separator
      span.info {{phone}}
    contact-separator.bubble
      i.fa.fa-weixin
  contact-category.cellphone
    contact-separator.icon
      i.fa.fa-mobile
    contact-separator.title
      span Mobile
    contact-separator
      each val in ['{{cellphone}} +33 (0)6 70 86 45 72', '{{cellphone}} +33 (0)6 57 35 92 43']
        span.info #{val}
    contact-separator.bubble
      each val in ['{{cellphone}} xxx', '{{cellphone}} xxx']
        i.fa.fa-weixin
  contact-category.mail
    contact-separator.icon
      i.fa.fa-envelope
    contact-separator.title
      span Mail
    contact-separator
      span.info {{mail}} {{surname}}.{{firstname}}@gmail.com
    contact-separator.plane
      a(href="mailto:{{surname}}.{{firstname}}@gmail.com")
        i.fa.fa-paper-plane
  contact-category.network
    contact-separator.icon 
      i.fa.fa-facebook-square
    contact-separator.network
      span Réseaux sociaux
    contact-separator.facebook
      i.fa.fa-facebook.fa-fw
    contact-separator.twitter
      i.fa.fa-twitter.fa-fw
