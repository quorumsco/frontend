contact-item(v-on="click: onClick", v-class="selected: selected")
  span.status
    svg(viewBox="0 0 100 100")
      circle(stroke-width="5", style="fill-opacity: 0;", cx="50", cy="50", r="22", stroke="#FFF2D8")
      circle(stroke-width="5", style="stroke-dasharray: 100, 100; fill-opacity: 0; stroke-dashoffset: 2;", transform="rotate(180 50 50)", cx="50", cy="50", r="22", stroke="#FEBF3C")
  span.name {{surname}} {{firstname}}
  span.info
    span.email {{email}}
    span.phone {{phone}}
  span.exchange
    img(src="images/perso-25.png")
    span St√©phane Barrit
  span.contact
    a(href="#")
      i.fa.fa-send
  span.fiche(v-on="click: showFiche(this.$parent.$parent)")
    a(href="#")
      i.fa.fa-bars
  span.delete(v-on="click: deleteContact(this)")
    a(href="#")
      i.fa.fa-times
