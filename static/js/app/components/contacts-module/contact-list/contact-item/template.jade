contact-item(v-on="click: onClick", v-class="selected: selected")
  span.check
    input(type="checkbox")
  span.name {{surname}} {{firstname}}
  span.info
    span.email {{email}}
    span.phone {{phone}}
  span.fiche(v-on="click: navigate('/contacts/' + id, $event)")
    a(href="#")
      i.fa.fa-bars
  span.delete(v-on="click: deleteContact(this)")
    a(href="#")
      i.fa.fa-times
