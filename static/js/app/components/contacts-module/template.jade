contacts-module
  contact-controls
    header
      span.icon
        i.fa.fa-user
      h3 Vos contacts
      span.description {{nb_contact}} contacts
    section(v-if="!displaying_profile")
      a(href="#")
        i(class="fa fa-plus")
      a(href="#" v-on="click: deleteMultiple(this.$children[0])")
        i(class="fa fa-trash")
      each val in ['share-square-o', 'check']
        a(href="#")
          i(class="fa fa-#{val}")
      span.sep
      each val in ['comments', 'tag', 'map-marker']
        a(href="#")
          i(class="fa fa-#{val}")
      span.sep
      a(href="#")
        i.fa.fa-search
    section(v-if="displaying_profile")
      a(href="#")
        i(class="fa fa-pencil")
      a(href="#" v-on="click: deleteMultiple(this.$children[0])")
        i(class="fa fa-trash")
      a(href="#")
        i(class="fa fa-share-square-o")
      span.sep
      each val in ['comments', 'tag', 'map-marker']
        a(href="#")
          i(class="fa fa-#{val}")
  contact-new
    input(v-model="new_contact.firstname", type="text", placeholder="firstname")
    input(v-model="new_contact.surname", type="text", placeholder="surname")
    input(v-model="new_contact.phone", type="text", placeholder="phone")
    button(v-on="click: createContact(new_contact)") Create
  contact-list(v-if="!displaying_profile" v-transition="fade")
  contact-fiche(v-if="displaying_profile" v-transition="fade")
  contact-slider
