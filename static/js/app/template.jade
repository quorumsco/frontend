app-module
  app-header(v-ref="header")

  app-main
    contacts-module(v-ref="contacts")

  .overlay(v-class="visible: overlay" v-on="click: hide($event)")
    div(v-class="darken: darken")

  app-nav(v-class="visible: show_nav")
    div
      h1
        a(href="#") Quorum
      nav-list
        nav-item
          a(href="{{path('contacts:list')}}" v-on="click: navigate('contacts:list', $event)") Missions
        nav-item
          a(href="{{path('contacts:list')}}" v-on="click: navigate('contacts:list', $event)") Contacts
        nav-item
          a(href="{{path('contacts:list')}}" v-on="click: navigate('contacts:list', $event)") Settings
        nav-item
          a(href="{{path('contacts:list')}}" v-on="click: navigate('contacts:list', $event)") About
